pipeline {
    agent { node { label 'Agent -1'}}


    stages {
        stage('Init') {
            steps {
                echo 'Initializing......'
                sh'''
                    terraform init


                '''
            
            }
        }
        stage('Plan') {
            steps {
                echo 'Planning.......'
                sh'''
                    terraform plan

                '''
            }
        }
        stage('Apply') {
            steps {
                echo 'Applying....'
                sh'''
                    terraform apply -auto-approve

                '''
                
                
                
            }
        }
    }

    post {
        always {
            echo 'I will always run weather job is success or not'
        }

        success{
            echo 'I will run only when job is success'
            
        }

        failure{
            echo 'I will run when failure'
        }

    }
}